@page
@model AccountsAddModel
@{
    ViewData["Title"] = "Account Creation";
}

<form method="post">
    <div class="form-group">
        <label for="InputUsername">Username</label>
        <input asp-for="Username" type="text" class="form-control" id="InputUsername" required>
    </div>
    <div class="form-group">
        <label for="InputPassword1">Password</label>
        <input asp-for="Password" type="password" class="form-control" id="InputPassword1" required>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>