@page
@model AccountsEditModel
@{
    ViewData["Title"] = "Account Edit";
}
    <form method="post">
        <input asp-for="Id" hidden>
        <input asp-for="Redirect" hidden>
        <div class="form-group">
            <label for="InputUsername">Username</label>
            <input asp-for="Username" type="text" class="form-control" id="InputUsername" required>
        </div>
        <div class="form-group">
            <label for="InputPassword1">Password</label>
            <input asp-for="Password" placeholder="Leave empty to use latest password" type="password" class="form-control" id="InputPassword1">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>