@page
@model ChangesEditModel
@{
    ViewData["Title"] = "Change Edit";
}
    <form method="post">
        <input asp-for="Id" hidden>
        <input asp-for="Redirect" hidden>
        <div class="form-group">
            <label for="InputTitle">Title</label>
            <input asp-for="Title" type="text" class="form-control" id="InputTitle" required>
        </div>
        <div class="form-group">
            <label for="InputContent1">Content</label>
            <textarea asp-for="Content" class="form-control" id="InputContent1" required ></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a class="btn btn-secondary" href="/Changes">Back</a>
    </form>