@page
@model ChangesAddModel
@{
    ViewData["Title"] = "Change Creation";
}

    <form method="post">
        <div class="form-group">
            <label for="InputTitle">Title</label>
            <input asp-for="Title" type="text" class="form-control" id="InputTitle" required>
        </div>
        <div class="form-group">
            <label for="InputContent1">Content</label>
            <textarea asp-for="Content" class="form-control" id="InputContent1" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>